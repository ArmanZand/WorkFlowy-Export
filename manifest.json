{
"update_url": "https://clients2.google.com/service/update2/crx",

  "name": "WorkFlowy Export",
  "short_name": "WF Export",
  "version": "1.0",
  "description": "__MSG_Manifestdesc__",
  "icons" : {
    "16": "image/icon16.png",
    "48": "image/icon48.png",
    "128": "image/icon128.png"
   },

  "background": {
    "scripts": [
      "js/background.js"
    ]
  },

  "commands": {
    "_execute_page_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      }
    },
    "open_workflowy": {
      "suggested_key": {
        "default": "Ctrl+Shift+U",
        "mac": "Command+Shift+U"
      },
      "description": "__MSG_OpenWorkFlowy__"
    }
  },

  "default_locale": "en",

  "content_scripts": [ {
    "matches": ["https://workflowy.com/*"],
    "js": [
      "js/jquery.min.js",
      "js/content_script.js"
      ]
    }
  ],

  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "contextMenus"
  ],

  "page_action": {
    "default_name": "WorkFlowy Export",
    "default_popup": "popup.html"
  },

  "options_page": "options.html",

  "manifest_version": 2
}
